  <div class="card">
    <h2>Search again</h2>
    <form id="deckSearch">
      <input type="hidden" id="userId" name="userId" value="{{user.id}}">
      <label for="deckInput">Search deck name</label>

      <input type="text" placeholder="ex. Ichthyology" id="deckInput">
      <label for="categoryInput">Search by category</label>

      <select id="categoryInput">
        <option value="" default>Select a category</option>
        {{#each data.categories}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
      
      <input class="button-primary" type="submit" value="Search">
    </form>
    <hr>
    <h2>Results ({{data.search.resultCount}})</h2>
    <p>Search: {{data.search.deck}}</p>
    <p>Category: {{data.search.category}}</h4>
    <div class="deck-list-container emulated-flex-gap">
      {{#each data.results}}
        {{>deckContainer name=this.deck.name creatorUn=this.creator.username creatorId=this.creator.id userId=this.userId deckId=this.deck.id count=this.cardCount date=this.deck.createdAt}}
      {{/each}}
    </div>
  </div>
