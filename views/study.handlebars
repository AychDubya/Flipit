
<div class="card"> 
{{#each data}}
  <div class="studycard">

    <div class="front"> 
      Front content
      {{addOne @index}}
        <h2>{{this.question}}</h2>
    </div> 
    <div class="back">
      Back content
      <h2>{{this.answer}}</h2>
    </div> 

  </div>
{{/each}}
</div>




